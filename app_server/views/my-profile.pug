extends layout

block content
  section
    .container
      .row
        .col-md-8
          .profile
            h1.page-header #{user.firstname}
            .row
              .col-md-4
                img.img-thumbnail(src='/images/user-default.jpg')
              .col-md-8
                ul
                  li
                    strong Name:
                    |  #{user.firstname}
                  li
                    strong Email Address: 
                    | #{user.email}
                  li
                    strong City: 
                    | #{user.city}
                  li
                    strong State: 
                    | #{user.state}
                  li
                    strong Gender:
                    |  #{user.gender}
                  li
                    strong Dance: 
                    | #{user.dance}
                  - urlEdit = '/myprofile/' + user._id + '/edit'
                  a.btn.btn-default(href=urlEdit) Edit
                  - urlDelete = '/myprofile/' + user._id + '/deleteUser'
                  a.btn.btn-default(href=urlDelete) Delete
            br
            br
              
            .row
              .col-md-12
                .panel.panel-default
                  .panel-heading
                    h3.panel-title Profile Wall
                  .panel-body
                    form
                      .form-group
                        textarea.form-control(placeholder='Write on the wall')
                      button.btn.btn-default(type='submit') Submit
                      .pull-right
                        .btn-group
                          button.btn.btn-default(type='button')
                            i.fa.fa-pencil
                            |  Text
                          button.btn.btn-default(type='button')
                            i.fa.fa-file-image-o
                            |  Image
                          button.btn.btn-default(type='button')
                            i.fa.fa-file-video-o
                            |  Video
                .panel.panel-default.post
                  .panel-body
                    .row
                      .delete-button
                        button.btn.btn-default(type='button')
                          i.fas.fa-trash-alt
                      .col-sm-2
                        a.post-avatar.thumbnail(href='/images/user-default.jpg')
