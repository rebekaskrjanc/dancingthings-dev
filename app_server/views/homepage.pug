extends layout


block content
  section
      .container
        .row
          .col-md-8
            .panel.panel-default
              .panel-heading
                h3.panel-title Wall
              .panel-body
                - urlNewPost = '/newpost/' + currentActiveUser
                form(action=urlNewPost, method='POST')
                  .form-group
                    textarea.form-control(name='vsebinaObjave', placeholder='Write on the wall')
                  button.btn.btn-default(type='submit') Submit
                  .pull-right
                    .btn-group
                      button.btn.btn-default(type='button')
                        i.fas.fa-pencil-alt
                        |  Text
                      button.btn.btn-default(type='button')
                        i.fas.fa-images
                        |  Image
                      button.btn.btn-default(type='button')
                        i.fas.fa-video
                        |  Video

            ul.postListing  
              each post in posts
                li           
                  .panel.panel-default.post
                    .panel-body
                      .row
                        .col-sm-2
                          a.post-avatar.thumbnail(href='images/user-default.jpg')
                            img(src='images/user-default.jpg')
                            .text-center #{post.postAuthor}
                          .likes.text-center 7 Likes
                        // col-sm-2 end
                        .col-sm-10
                          .bubble
                            .pointer
                              p
                                | #{post.text}
                            .pointer-border
                          // bubble end
                          p.post-actions
                            a(href='#') Like
                          .comment-form
                            - urlCommentAdd = '/comment/' + post._id + '/addcomment/' + currentActiveUser
                            form.form-inline(action=urlCommentAdd, method='POST')
                              .form-group
                                input#exampleInputName2.form-control(type='text', name="vsebinaKomentarja" placeholder='Enter Comment')
                              button.btn.btn-default(type='submit') Add
                          // comment form end
                          .clearfix
                          .comments
                            ul.postListing
                              each comment in post.comments
                                .comment
                                  a.comment-avatar.pull-left(href='#')
                                    img(src='images/user-default.jpg')
                                  .comment-text
                                    p #{comment.commentText}
                                .clearfix
            
